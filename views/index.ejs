<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>21 Savage Fans</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Todos</h1>
  <h2>Monitor your tasks and create a schedule!</h2>

  <h3>Todos</h3>
  <ul class="todos">
  <% for(var i=0; i < todos.length; i++) {%>
    <li class="todo">
      <% if (todos[i].done) { %>
        <span class="crossed"> 
          <span><i class="fa fa-check-circle done" aria-hidden="true"></i></span>
          <span><%= todos[i].todo %></span> 
          <span><i class="fa fa-trash" aria-hidden="true"></i></span>
        </span>
      <% } else { %>
        <span>
          <span><i class="fa fa-circle-o done" aria-hidden="true"></i></span>
          <span><%= todos[i].todo %></span>
          <span><i class="fa fa-trash" aria-hidden="true"></i></span>
        </span>
      <% } %>
    </li>
  <% } %>
  </ul>

  <h2>Add a task</h2>

  <form action="/todos" method="POST">
    <!-- <input type="text" placeholder="name" name="name"> -->
    <input type="text" placeholder="Call anna" name="todo">
    <button type="submit">Submit</button>
  </form>

  <script src="main.js"></script>
</body>
</html>
